{
  "name": "mage-lang",
  "displayName": "Mage Language",
  "description": "Syntax highlighting and snippets for the Mage scripting language",
  "version": "0.1.0",
  "publisher": "mage",
  "icon": "icons/mage64.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "contributes": {
    "languages": [
      {
        "id": "mage",
        "aliases": ["Mage", "mage"],
        "extensions": [".mage"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/mage.svg",
          "dark": "./icons/mage.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "mage",
        "scopeName": "source.mage",
        "path": "./syntaxes/mage.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "mage",
        "path": "./snippets/mage.json"
      }
    ]
  }
}
