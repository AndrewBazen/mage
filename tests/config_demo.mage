# This script demonstrates basic Mage functionality

# Output some system info
incant "Running config demo script"
evoke "whoami"

# Set a variable
conjure config_file = "config_exists"

# Simple conditional
scry config_file == "config_exists" {
    incant "Config variable is set"
}

# Advanced conditional
scry config_file == "config_exists" {
    incant "Config variable is set"
} lest {
    incant "No .mageconfig found in current directory"
    incant "Try creating one with 'mage init'"
}
